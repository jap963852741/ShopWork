<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".LotteryFragment">



        <ImageView
            android:id="@+id/imgRollingDice"
            android:layout_gravity="center_vertical|center|clip_vertical|clip_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/dice03" />

<LinearLayout
android:layout_width="408dp"
android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <Button
        android:id="@+id/btnRollDice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp"
        android:text="@string/btn_roll_game"
        android:textSize="20sp" />

        <TextView
            android:id="@+id/countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="180dp"
            android:text=""
            android:gravity="center"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnChangeLottery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="120dp"
            android:text="@string/btn_chgnge_lottery"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>
    </LinearLayout>

